@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PersonalProfileIndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="text-center mt-4 border-bottom pb-3">@ViewData["Title"]</h4>
<div class="container-fluid w-100 p-0 mb-3 d-flex justify-content-center">
    <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow rounded p-4">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" required />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" id="PhoneNumber" class="form-control" required />
                        @if (ViewBag.PhoneNumberInUse != null)
                        {
                            <p class="text-danger">@ViewBag.PhoneNumberInUse</p>
                        }
                        <span class="text-danger d-none" id="PhoneNumberIsTaken">This phone number is already taken!</span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name" class="form-control" required />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.Surname"></label>
                        <input asp-for="Input.Surname" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.PersonalNumber" class="mb-1 mt-2"></label>
                        <input asp-for="Input.PersonalNumber" class="form-control" id="PersonalNumber" required />
                        @if (ViewBag.PersonalNumberInUse != null)
                        {
                            <p class="text-danger">@ViewBag.PersonalNumberInUse</p>
                        }
                        <span class="text-danger d-none" id="PersonalNumberIsTaken">This personal number is already taken!</span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.DateOfBirth"></label>
                        <input asp-for="Input.DateOfBirth" class="form-control" required />
                    </div>
                </div>
                <div class="form-group  mt-3">
                    <label asp-for="Input.CityId"></label>
                    <select class="form-select" asp-items="ViewBag.City" asp-for="Input.CityId" aria-label="Default select example">
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Input.BloodTypeId"></label>
                    <select class="form-select" asp-items="ViewBag.BloodType" asp-for="Input.BloodTypeId">
                        <option value="">Not selected</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Input.Gender"></label>
                    <select class="form-select" asp-items="ViewBag.Gender" asp-for="Input.Gender" aria-label="Default select example">
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button id="update-profile-button" type="submit" class="btn btn-danger w-50">Save</button>
            </div>
        </form>
    </div>
</div>
@await Component.InvokeAsync("Notyf")
<script src="~/js/AvailablePhoneNumberProfile.js"></script>
<script src="~/js/AvailablePersonalNumberProfil.js"></script>