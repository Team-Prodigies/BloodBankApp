@model BloodDonationModel

@{
    ViewData["Title"] = "Add donation";
    var donorFound = ViewBag.DonorFound;
}

<div class="d-flex justify-content-center pt-3">
    <div class="search-bar row g-3">
        <form class="search-form d-flex align-items-center mb-2" method="get" asp-area="HospitalAdmin" asp-action="AddDonation" asp-controller="Donations">
            <input type="number" class="form-control mx-2" placeholder="Search" id="personalNumber" name="personalNumber" />
            <button type="submit" title="Search" class="btn btn-outline-info"><i class="bi bi-search"></i></button>
        </form>
    </div>
</div>
@if (donorFound != null && donorFound == true)
{
    <div class="d-flex justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body p-5">
                    <h5 class="card-title">Add Donation</h5>
                    <form asp-action="AddDonation" asp-controller="Donations" asp-area="HospitalAdmin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <input asp-for="Donor.DonorId" style="display:none" />
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Donor.User.Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Donor.User.Name" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Donor.User.Surname" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Donor.User.Surname" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Donor.PersonalNumber" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Donor.PersonalNumber" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Donor.BloodType.BloodTypeName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Donor.BloodType.BloodTypeName" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Amount" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="DonationDate" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="DonationDate" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Add" class="btn btn-info" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}