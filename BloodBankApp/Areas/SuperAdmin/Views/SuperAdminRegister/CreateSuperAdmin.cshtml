@model SuperAdminModel

<div class="d-flex justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-title">Add new user account</h5>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input class="form-control text-capitalize" asp-for="@Model.Name" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Surname</label>
                        <div class="col-sm-10">
                            <input class="form-control text-capitalize" asp-for="@Model.Surname" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Date of birth</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.DateOfBirth" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">UserName</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.UserName" required id="UserName" />
                            <span class="text-danger d-none" id="UserNameIsTaken">This username is already taken!</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.Email" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.Password" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Confirm Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.ConfirmPassword" required>
                        </div>
                    </div>
                    <hr/>
                    <div class="my-2">
                        <h5 class="card-title">Select roles</h5>
                    </div>
                    <div class="d-flex justify-content-center">
                        <table class="table table-hover table-responsive" id="permissionTable">
                            <thead>
                                <tr>
                                    <th>
                                        Role
                                    </th>
                                    <th>
                                        Assigned
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                            @for (int i = 0; i < Model.Roles.Count(); i++)
                            {
                                    <tr>
                                        <td>
                                            <input class="form-control" asp-for="@Model.Roles[i].RoleName" type="hidden" />
                                            @Model.Roles[i].RoleName
                                        </td>
                                        <td>
                                            <div class="form-check m-1">
                                                @if (@Model.Roles[i].RoleName.Equals("Donor") || @Model.Roles[i].RoleName.Equals("HospitalAdmin"))
                                                {
                                                    <input type="checkbox" class="form-check" asp-for="@Model.Roles[i].IsSelected" disabled/>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="form-check" asp-for="@Model.Roles[i].IsSelected"/>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/AvailableUsername.js"></script>