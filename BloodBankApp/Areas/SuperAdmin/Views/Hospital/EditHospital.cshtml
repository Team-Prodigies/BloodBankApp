@model HospitalModel

<div class="d-flex justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-title">Edit Hospital</h5>
                <form asp-action="EditHospital" asp-controller="Hospital" asp-area="SuperAdmin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-3">
                        <input asp-for="HospitalId" style="display:none" />
                        <input asp-for="Location.LocationId" style="display:none" />
                        <label asp-for="HospitalName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="HospitalName" class="form-control" />
                            <span asp-validation-for="HospitalName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ContactNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ContactNumber" class="form-control" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="HospitalCode" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="HospitalCode" class="form-control" />
                            @if (ViewBag.hospitalCodeInUse != null)
                            {
                                <p class="text-danger">@ViewBag.hospitalCodeInUse</p>
                            }
                            <span asp-validation-for="HospitalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="LocationId" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-4">
                            <label asp-for="Location.Longitude" class="col-sm-4 col-form-label"></label>
                            <input asp-for="Location.Longitude" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Location.Latitude" class="col-sm-3 col-form-label"></label>
                            <input asp-for="Location.Latitude" class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="CityId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Save Changes" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
