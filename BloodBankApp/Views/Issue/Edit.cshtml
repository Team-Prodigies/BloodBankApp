@model Issue
@using BloodBankApp.Enums;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<div class="container-fluid bgForm">
    <div class="container-fluid d-flex justify-content-center" style="padding-top: 10%; padding-bottom: 10%;">
        <div class="container ms-2 me-2 w-75 mt-4 mb-5 shadow bg-white rounded p-4" id="container-issue">
            <section>
                <form method="post" asp-action="Edit">
                    <h4 class="mt-3 text-danger">Edit an issue</h4>
                    <hr />
                    <input asp-for="IssueId" hidden />
                    <div class="d-flex justify-content-center">
                        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 gy-2 w-75" id="container-issue-inside">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Title" class="mb-1 mt-2"></label>
                                    <input asp-for="Title" disabled class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Description" class="mb-1 mt-2"></label>
                                    <textarea asp-for="Description" disabled class="form-control gy-3" readonly>
                                    </textarea>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="IssueStatus" class="mb-1 mt-2">IssueStatus: </label>
                                    <select class="form-select" asp-for="IssueStatus">
                                        <option value="@IssueStatus.ONHOLD">On Hold</option>
                                        <option value="@IssueStatus.INPROGRES">In Progres</option>
                                        <option value="@IssueStatus.FIXED">Fixed</option>
                                    </select>
                                    <span asp-validation-for="IssueStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="DateReported" class="mb-1 mt-2"></label>
                                    <input asp-for="DateReported" disabled class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-around mt-3">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a class="btn btn-secondary" asp-controller="Issue" asp-action="index">Back</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>