@model Issue
@using BloodBankApp.Enums;

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="container-fluid bgForm">
    <div class="container-fluid d-flex justify-content-center" style="padding-top: 10%; padding-bottom: 10%;">
        <div class="container ms-2 me-2 w-50 mt-4 mb-5 shadow bg-customGr rounded p-4">
            <section>
                <form method="post" asp-action="Delete">
                    <h4 class="mt-3 text-danger">Delete an issue</h4>
                    <hr />
                    <input asp-for="IssueId" hidden/>
                    <div class="d-flex justify-content-center">
                        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 gy-2 w-75">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Title" class="mb-1 mt-2"></label>
                                    <input asp-for="Title" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Description" class="mb-1 mt-2"></label>
                                    <textarea asp-for="Description" class="form-control gy-3" readonly>
                                    </textarea>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="IssueStatus" class="mb-1 mt-2"></label>
                                    <select asp-for="IssueStatus" disabled>
                                        <option value="@IssueStatus.ONHOLD">On Hold</option>
                                        <option value="@IssueStatus.INPROGRES">In Progres</option>
                                        <option value="@IssueStatus.FIXED">Fixed</option>
                                    </select>
                                    <span asp-validation-for="IssueStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="DateReported" class="mb-1 mt-2"></label>
                                    <input asp-for="DateReported" class="form-control" disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-secondary" asp-controller="Issue" asp-action="index">Back</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

