@model RoleModel

<div class="container col-7 card">
    <div class="card-body">
        <h5 class="card-title">Edit Role</h5>
        <form class="row g-3" asp-controller="Roles" asp-action="EditRole" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="container col-8">
                <div class="mb-3 mt-2">
                    <input asp-for="Id" type="hidden" class="form-control" id="am">
                    <label asp-for="RoleName" class="form-label"></label>
                    <input asp-for="RoleName" class="form-control" id="inputName4" required>
                </div>
                <div class="text-start mt-2 mb-2">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
