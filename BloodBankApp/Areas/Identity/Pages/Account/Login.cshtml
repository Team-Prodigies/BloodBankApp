@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link rel="stylesheet" href="~/css//StyleSheet.css" />
</head>
<div class="container-fluid d-flex bg-custom justify-content-center">
    <div class="container ms-2 me-2 w-50 mt-4 mb-4 shadow bg-white rounded p-4">
        <section>
            <form id="account" method="post">
                <h4 class="mt-3 text-danger">Use an account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="d-flex justify-content-center">
                    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 gy-2 w-75">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Input.UserName" class="mb-1 mt-2"></label>
                                <input asp-for="Input.UserName" class="form-control" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Input.Password" class="mb-1 mt-2"></label>
                                <input asp-for="Input.Password" class="form-control gy-3" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3">
                                <div class="d-flex align-items-center justify-content-center">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe" class="mb-1 mt-2">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-danger">Login</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
