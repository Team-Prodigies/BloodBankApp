@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible text-center" role="alert">
        <button class="btn btn-close" type="button" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        @Model
    </div>
}