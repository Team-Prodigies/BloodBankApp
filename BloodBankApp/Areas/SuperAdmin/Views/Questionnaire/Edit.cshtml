@model QuestionModel
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Edit Question</h3>

        <!-- Vertical Form -->
        <form asp-action="Edit" id="profile-form" method="post" class="row g-3">
            <input asp-for="QuestionId" type="hidden" class="form-control">
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" style="height: 130px"></textarea>
            </div>
            <div class="col-12">
                <label asp-for="Answer" class="mb-1 mt-2"></label>
                <div class="d-flex align-items-center justify-content-evenly">
                    <select class="form-select" asp-items="ViewBag.Answer" asp-for="Answer" aria-label="Default select example">
                    </select>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <!-- Vertical Form -->
    </div>
</div>

@await Component.InvokeAsync("Notyf")