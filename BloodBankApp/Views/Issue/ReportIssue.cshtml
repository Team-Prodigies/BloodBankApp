@model Issue

<div class="container-fluid bgForm">
    <div class="container-fluid d-flex justify-content-center" style="padding-top: 10%; padding-bottom: 10%;">
        <div class="container ms-2 me-2 w-50 mt-4 mb-5 shadow bg-customGr rounded p-4">
            <section>
                <form id="account" method="post">
                    <h4 class="mt-3 text-danger">Report an issue</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="d-flex justify-content-center">
                        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 gy-2 w-75">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Title" class="mb-1 mt-2"></label>
                                    <input asp-for="Title" class="form-control" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Description" class="mb-1 mt-2"></label>
                                    <textarea asp-for="Description" class="form-control gy-3" required>
                                    </textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" class="btn btn-danger">Report</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
