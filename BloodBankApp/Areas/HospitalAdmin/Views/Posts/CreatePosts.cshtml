@model DonationPost

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Create Post</h3>
        <form asp-action="CreatePosts" id="profile-form" method="post" class="row g-3">
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" style="height: 130px"></textarea>
            </div>
            <div class="col-12">
                <label asp-for="DateRequired" class="form-label"></label>
                <input asp-for="DateRequired" class="form-control">
            </div>
            <div class="col-12">
                <label asp-for="BloodTypeId" class="mb-1 mt-2"></label>
                <select class="form-select" asp-items="ViewBag.BloodType" asp-for="BloodTypeId" aria-label="Default select example">
                </select>
            </div>
            <div class="col-12">
                <label asp-for="AmountRequested" class="form-label"></label>
                <input type="number" asp-for="AmountRequested" class="form-control">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>