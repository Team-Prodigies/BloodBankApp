@using BloodBankApp.Enums
@using BloodBankApp.ExtensionMethods
@model DonationPost
@{ 
    var HospitalId = ViewBag.Hospital;
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Create Post</h3>

        <!-- Vertical Form -->
        <form asp-action="CreatePosts" id="profile-form" method="post" class="row g-3">
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" style="height: 130px"></textarea>
            </div>
            <div class="col-12">
                <label asp-for="DateRequired" class="form-label"></label>
                <input asp-for="DateRequired" class="form-control">
            </div>
            <div class="col-12">
                <label asp-for="BloodTypeId" class="mb-1 mt-2"></label>
                <select class="form-select" asp-items="ViewBag.BloodType" asp-for="BloodTypeId" aria-label="Default select example">
                </select>
            </div>
            <div class="col-12">
                <input type="hidden" asp-for="@HospitalId" class="form-control">
            </div>
            <div class="col-12">
                <label asp-for="AmountRequested" class="form-label"></label>
                <input type="number" asp-for="AmountRequested" class="form-control">
            </div>
            <div class="col-12">
                <label asp-for="PostStatus" class="mb-1 mt-2"></label>
                <div class="d-flex align-items-center justify-content-evenly">
                    @foreach (var c in Enum.GetValues(typeof(PostStatus))) {
                        <div class="form-check">
                            <label class="form-check-label me-2" asp-for="PostStatus">@c.ToString().ToTitleCase()</label>
                            <input class="form-check-input" type="radio" asp-for="PostStatus" value="@((int)c)" required />
                        </div>
                    }
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <!-- Vertical Form -->
    </div>
</div>