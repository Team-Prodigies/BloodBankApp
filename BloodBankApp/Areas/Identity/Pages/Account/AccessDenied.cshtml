@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<head>
    <link href="~/css/AccessDenied.css" rel="stylesheet">
</head>

<div class="container-fluid w-100 p-0 d-flex justify-content-center">
    <div class="container d-flex justify-content-between ms-2 me-2 w-75 mt-4 mb-4 p-4">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 gy-3">
            <div class="col d-flex flex-column justify-content-center align-items-center">
                <div class="text-md-start text-center">
                    <div class="h1 mb-5" style="font-weight: 800">
                        You are not authorized.
                    </div>
                    <div class="h3" style="font-weight: 800">You tried to access a page you did not have prior authorization for.</div>
                </div>
            </div>
            <div class="col d-flex flex-column justify-content-center align-items-md-end align-items-center">
                <div class="neon">403</div>
                <div class="door-frame">
                    <div class="door">
                        <div class="rectangle">
                        </div>
                        <div class="handle">
                        </div>
                        <div class="window">
                            <div class="eye">
                            </div>
                            <div class="eye eye2">
                            </div>
                            <div class="leaf">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>