@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("SuperAdmin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="SuperAdmin" asp-controller="AdminHome" asp-action="Index">Dashboard</a>
        </li>
    }
    if (User.IsInRole("HospitalAdmin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="HospitalAdmin" asp-controller="Home" asp-action="Index">Dashboard</a>
        </li>
    }
    if (User.IsInRole("Donor"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Donator" asp-controller="Home" asp-action="Index">Dashboard</a>
        </li>
    }
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a class="nav-link scrollto"><input type="submit" value="Logout" class="nav-link btn btn-link text-dark" /></a>
        </form>
    </li>
}
else
{
    <li>
        <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}