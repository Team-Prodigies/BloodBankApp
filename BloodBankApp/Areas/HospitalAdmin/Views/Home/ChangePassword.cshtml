@model ChangePasswordModel;
<div class="container-fluid w-100 p-0 mb-3">
    <h1 class="container">Profile Page</h1>
    <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow rounded p-4">
        <h3 class="container">Change Password</h3>
        <form asp-action="ChangePassword" id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="margin-top:2%;">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" required />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:4%;">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" required />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:4%;">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <button style="margin-top:4%;" type="submit" class="btn btn-danger">Update password</button>
            </div>

        </form>
        <br />
        <a class="btn btn-outline-info mt-4" asp-action="Profile">Change Profile</a>
    </div>
</div>
@await Component.InvokeAsync("Notyf")
