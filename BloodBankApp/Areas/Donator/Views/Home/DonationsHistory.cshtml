@model List<BloodBankApp.Areas.Donator.ViewModels.BloodDonationsModel>



<div class="container-fluid w-100 p-0 d-flex justify-content-center">
    <div class="container ms-2 me-2 w-75 mt-5 mb-5">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 gy-4">
            @foreach (var posts in Model)
            {
            <div class="col">
                <div class="card" style="min-height: 100%">
                    <div class="card-body me-3 ms-3 mt-2">
                        <h5 class="card-title text-center" style="color: #d1001f">@posts.Hospital.HospitalName</h5>
                        <div class="d-flex justify-content-around">
                            <p class="card-text"><strong>City:</strong> @posts.Hospital.City.CityName</p>
                            <p class="card-text"><strong>Amount:</strong> @posts.Amount ml </p>
                        </div>
                        <p class="card-text d-flex justify-content-center"><strong>Donation Date: </strong> @posts.DonationDate</p>

                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>