@page
@using BloodBankApp.Enums
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css//StyleSheet.css" />
</head>

<div class="row justify-content-center mt-5 mb-4">
    <div class="sign-up col-md-8 rounded">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="mt-3">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="d-flex justify-content-evenly">
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Input.Name" class="mb-1"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Surname" class="mb-1"></label>
                        <input asp-for="Input.Surname" class="form-control" />
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.UserName" class="mb-1"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.DateOfBirth" class="mb-1"></label>
                        <input asp-for="Input.DateOfBirth" class="form-control" />
                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Input.PhoneNumber" class="mb-1"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="mb-1"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="mb-1"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Input.ConfirmPassword" class="mb-1"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Input.PersonalNumber" class="mb-1">Personal Number</label>
                        <input asp-for="Input.PersonalNumber" class="form-control" />
                        <span asp-validation-for="Input.PersonalNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <div class="pb-4">
                            <label asp-for="Input.Gender" class="mb-1"></label>
                            <div class="d-flex">
                                @foreach (var c in System.Enum.GetValues(typeof(Gender)))
                                {
                                    <div class="form-check">
                                        <label class="form-check-label mx-2" asp-for="Input.Gender">@c</label>
                                        <input class="form-check-input form-control" type="radio" asp-for="Input.Gender" value="@((int)c)" />
                                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.BloodTypeId" class="mb-1"></label>
                            <select class="form-select" asp-items="ViewBag.BloodType" asp-for="Input.BloodTypeId" aria-label="Default select example">
                            </select>
                            <span asp-validation-for="Input.BloodTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.CityId" class="mb-1"></label>
                            <select class="form-select" asp-items="ViewBag.City" asp-for="Input.CityId" aria-label="Default select example">
                            </select>
                            <span asp-validation-for="Input.CityId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mb-3">
                <button type="submit" id="btn-sign-up" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
