@using BloodBankApp.Enums
@using BloodBankApp.ExtensionMethods
@model Question

<div class="d-flex justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-title">Create Questions</h5>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="@Model.Answer" class="mb-1 mt-2"></label>
                        <div class="d-flex align-items-center justify-content-evenly">
                            @foreach (var c in Enum.GetValues(typeof(Answer)))
                            {
                                <div class="form-check">
                                    <label class="form-check-label me-2" asp-for="Answer">@c.ToString().ToTitleCase()</label>
                                    <input class="form-check-input" type="radio" asp-for="Answer" value="@((int)c)" required />
                                </div>
                            }
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>