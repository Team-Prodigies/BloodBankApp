@page
@model RegisterMedicalStaffModel
@{
    ViewData["Title"] = "RegisterMedicalStaff";
}

<head>
    <link rel="stylesheet" href="~/css//StyleSheet.css" />
</head>
<div class="container-fluid bgForm">
    <div class="container-fluid d-flex justify-content-center" style="padding-top: 7%; padding-bottom: 7%;">
        <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow bg-customGr rounded p-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="mt-3 text-danger">Create a Hospital Admin account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 gy-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.Name" class="mb-1 mt-2"></label>
                            <input asp-for="Input.Name" class="form-control text-capitalize" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.Surname" class="mb-1 mt-2"></label>
                            <input asp-for="Input.Surname" class="form-control text-capitalize" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.UserName" class="mb-1 mt-2"></label>
                            <input asp-for="Input.UserName" class="form-control" id="UserName" />
                            <span class="text-danger d-none" id="UserNameIsTaken">This username is already taken!</span>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 gy-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.DateOfBirth" class="mb-1 mt-2"></label>
                            <input asp-for="Input.DateOfBirth" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber" class="mb-1 mt-2"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.Email" class="mb-1 mt-2"></label>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 gy-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.Password" class="mb-1 mt-2"></label>
                            <input asp-for="Input.Password" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="mb-1 mt-2"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.HospitalCode" class="mb-1 mt-2"></label>
                            <input asp-for="Input.HospitalCode" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 gy-3">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Input.HospitalId" class="mb-1 mt-2"></label>
                            <select class="form-select" asp-items="ViewBag.Hospital" asp-for="Input.HospitalId" aria-label="Default select example">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-danger">Register</button>
                </div>
                <p class="small mb-0"> <a asp-area="Identity" asp-page="/Account/Register">Register as Donor</a></p>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    <script src="~/js/AvailableUsername.js"></script>
