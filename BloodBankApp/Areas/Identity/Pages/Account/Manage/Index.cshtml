@page
@model PersonalProfileIndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div style="padding:2%;height:100%">
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="Input.CityId" class="mb-1 mt-2"></label>
                    <select class="form-select" asp-items="ViewBag.City" asp-for="Input.CityId" aria-label="Default select example">
                    </select>
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>

                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" disabled />
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="PersonalNumber"></label>
                    <input asp-for="PersonalNumber" class="form-control" disabled />
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="Gender"></label>
                    <input asp-for="Gender" class="form-control" disabled />
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="BloodTypeName"></label>
                    <input asp-for="BloodTypeName" class="form-control" disabled />
                </div>
                <div class="form-group" style="margin-top:7%;">
                    <label asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth" class="form-control" disabled />
                </div>
                <button style="margin-top:7%" id="update-profile-button" type="submit" class="btn btn-secondary">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}