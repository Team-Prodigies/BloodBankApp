@model HospitalModel

@{
    ViewData["Title"] = "CreateHospital";
}

<div class="d-flex justify-content-center">
    <div class="col-lg-11">
        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-title">Create Hospital</h5>
                <form asp-action="CreateHospital" asp-controller="Hospital" asp-area="SuperAdmin" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row mb-3">
                        <label asp-for="HospitalName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="HospitalName" class="form-control" required/>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ContactNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ContactNumber" class="form-control" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="HospitalCode" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="HospitalCode" class="form-control" id="HospitalCode" required />
                            @if (ViewBag.hospitalCodeInUse != null)
                            {
                                <p class="text-danger">@ViewBag.hospitalCodeInUse</p>
                            }
                            <span class="text-danger d-none" id="HospitalCodeIsTaken">This hospital code is already taken!</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Location" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-4">
                            <label asp-for="Location.Longitude" class="col-sm-4 col-form-label"></label>
                            <input asp-for="Location.Longitude" class="form-control" required />
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Location.Latitude" class="col-sm-3 col-form-label"></label>
                            <input asp-for="Location.Latitude" class="form-control" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="CityId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CityId" class="form-control" asp-items="@ViewBag.CityId"></select>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Create" class="btn btn-info" required />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/AvailableHospitalCode.js"></script>
