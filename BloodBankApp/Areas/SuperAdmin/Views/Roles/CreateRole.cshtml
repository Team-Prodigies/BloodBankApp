@model RoleModel

<div class="container col-7 card">
    <div class="card-body">
        <h5 class="card-title">Create Role</h5>
        <form class="row g-3" asp-controller="Roles" asp-action="CreateRole" method="post">
            <div class="container col-8">
                <div class="mb-2">
                    <label asp-for="RoleName" class="form-label"></label>
                    <input asp-for="RoleName" class="form-control" id="inputNanme4">
                </div>
                <div class="text-start mt-2">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>
            
        </form>
    </div>
</div>