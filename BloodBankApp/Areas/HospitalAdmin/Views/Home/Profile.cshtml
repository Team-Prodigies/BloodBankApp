@model HospitalAdminModel

<div class="container-fluid w-100 p-0 mb-3">
    <h1 class="container">Profile Page</h1>
    <hr class="container"/>
    <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow rounded p-4">
        <h3 class="container">Change Profile</h3>
        <form asp-action="ChangeProfile" id="profile-form" method="post" style="margin-top:2%;">
            <div class="text-danger"></div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group mt-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">

                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button id="update-profile-button" type="submit" class="btn btn-danger w-25">Save</button>
            </div>
        </form>
    </div>
    <br />
    <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow rounded p-4">
        <h3 class="container">Change Password</h3>
        <form asp-action="ChagePassword" id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="margin-top:2%;">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" required />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:4%;">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" required />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:4%;">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button style="margin-top:4%;" type="submit" class="btn btn-danger">Update password</button>
        </form>
    </div>
</div>
@await Component.InvokeAsync("Notyf")