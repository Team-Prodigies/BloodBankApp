@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container w-100">
    <h4 class="mt-5">@ViewData["Title"]</h4>

    <div class="row mt-3">
        <div class="col-md-6">
            <p class="mt-3">Your account contains personal data that you have given us. This page allows you to delete that data.</p>
            <p>
                <strong class="mt-3">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
            <p class="mt-3 mb-5">
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary">Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
