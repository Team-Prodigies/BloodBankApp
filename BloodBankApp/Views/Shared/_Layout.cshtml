
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloodBankApp</title>



    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css//StyleSheet.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <header id="header">
        <div class="container  d-flex align-items-center">
            <h3 class="logo me-auto"><a asp-area="" asp-controller="Home" asp-action="Index"><img style="width: 150px; " src="~/Images/logo.png" /></a></h3>
            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Index">About</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Index">Hospitals</a></li>
                    <partial name="_LoginPartial" />
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted">
        <div class="container text-center">
            <div class="row justify-content-around">
                <div class="col-4">
                    <div>
                        <img src="~/Images/logo.png" />
                    </div>
                    <div class="social-links">
                        <a href="mailto: example@gmail.com"><i class="bi bi-envelope footer-icon"></i></a>
                        <a href="#"><i class="bi bi-facebook footer-icon"></i></a>
                        <a href="#"><i class="bi bi-linkedin footer-icon"></i></a>
                        <a href="#"><i class="bi bi-twitter footer-icon"></i></a>
                    </div>
                </div>
                <div class="col-4 ">
                    <h2>Important links</h2>
                    <div class="footer-links">
                        <ul>
                            <li> <i class="bi bi-chevron-right"></i> <a href="#">Home</a></li>
                            <li> <i class="bi bi-chevron-right"></i> <a href="#">About us</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container d-flex justify-content-center">
            &copy; 2022 - BloodBankApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
