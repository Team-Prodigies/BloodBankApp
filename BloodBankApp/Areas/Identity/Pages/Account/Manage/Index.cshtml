@page
@model PersonalProfileIndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="text-center mt-4 border-bottom pb-3">@ViewData["Title"]</h4>
<div class="container-fluid w-100 p-0 mb-3 d-flex justify-content-center">
    <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow rounded p-4">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" required />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" required />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Input.CityId" class="mb-1 mt-2"></label>
                <select class="form-select" asp-items="ViewBag.City" asp-for="Input.CityId" aria-label="Default select example">
                </select>
            </div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="PersonalNumber"></label>
                        <input asp-for="PersonalNumber" class="form-control" disabled />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="Gender"></label>
                        <input asp-for="Gender" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="BloodTypeName"></label>
                        <input asp-for="BloodTypeName" class="form-control" disabled />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button id="update-profile-button" type="submit" class="btn btn-danger w-50">Save</button>
            </div>
        </form>
    </div>
</div>
@await Component.InvokeAsync("Notyf")
