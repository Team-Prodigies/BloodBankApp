@model ProfileAdminModel

@{
    ViewData["Title"] = "Profile";
}

<h4 class="text-center mt-4 border-bottom pb-3">@ViewData["Title"]</h4>

<div class="container-fluid w-100 p-0 mb-3 d-flex justify-content-center">
    <div class="container ms-2 me-2 w-75 mt-4 mb-4 shadow rounded p-4" style="background-color: white">
        <form id="profile-form" asp-controller="Profile" asp-action="EditProfile" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label class="mb-2" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label class="mb-2" asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                <div class="col">
                    <div class="form-group mt-3">
                        <label class="mb-2" asp-for="UserName"></label>
                        <input asp-for="UserName" id="UserName" class="form-control" required />
                        <span class="text-danger d-none" id="UserNameIsTaken">This username is already taken!</span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mt-3">
                        <label class="mb-2" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" required type="email" />
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group mt-3">
                    <label class="mb-2" asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth" class="form-control" required />
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4 mb-3">
                <button id="update-profile-button" type="submit" class="btn btn-danger w-50">Save</button>
            </div>
            <p class="small mb-0"> <a asp-area="SuperAdmin" asp-controller="Profile" asp-action="ChangePassword">Change Password</a></p>
        </form>
    </div>
</div>

@await Component.InvokeAsync("Notyf")
<script src="~/js/AvailableUsername.js"></script>